<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tabletopcompanion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabletopCompanion">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TabletopCompanion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ProfileSetupActivity"
            android:exported="false"
            android:label="Profile Setup"
            android:theme="@style/Theme.TabletopCompanion">
        </activity>
        <activity
            android:name=".ui.CreateRoomActivity"
            android:exported="false"
            android:label="Create Room"
            android:theme="@style/Theme.TabletopCompanion">
        </activity>
        <activity
            android:name=".ui.RoomActivity"
            android:exported="false"
            android:label="Game Room"
            android:theme="@style/Theme.TabletopCompanion">
        </activity>
        <activity
            android:name=".ui.JoinRoomActivity"
            android:exported="false"
            android:label="Join Game Room"
            android:theme="@style/Theme.TabletopCompanion">
        </activity>
        <activity
            android:name=".ui.TemplateManagerActivity"
            android:exported="false"
            android:label="Manage Templates"
            android:theme="@style/Theme.TabletopCompanion">
        </activity>
    </application>

</manifest>
